= form_for @candidate do |f|
  -if @candidate.errors.any?
    #error_explanation
      %h2= "#{pluralize(@candidate.errors.count, "error")} prohibited this candidate from being saved:"
      %ul
        - @candidate.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :intake_date
    = f.date_select :intake_date
  .field
    = f.label :followup_date
    = f.date_select :followup_date
  .field
    = f.label :comments
    = f.text_area :comments
  .field
    = f.label :user
    = f.text_field :user
  .field
    = f.label :source
    = f.text_field :source
  .field
    = f.label :status
    = f.text_field :status
  .actions
    = f.submit 'Save'
